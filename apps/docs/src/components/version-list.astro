---
import { getGroupedSchemaVersions } from "@forge/schema/versions/group-versions.ts";
---

<div>
{
	getGroupedSchemaVersions().map((major) => (
		<section>
			<h3>Version {major.version}</h3>
			<ul>
				{major.schemas
					.map((minor) => (
						<li>
							<h4>{minor.version}</h4>
							<ul>
								{minor.schemas
									.map((patch) => (
										<li>
											<h5>{patch.version}</h5>
											<ul>
												{patch.schemas
													.map((schema) => (
													<li>
														<a
															href={`/schema/${schema.version}/${schema.model}.${schema.extension}`}

														>
															<b>{schema.model}</b><span style="opacity: 0.8;">.{schema.extension}</span>
														</a>
													</li>

												))}
											</ul>



										</li>
									))}
							</ul>
						</li>
					))}
			</ul>
		</section>
	))
}
</div>