{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "_type": {
      "const": "character"
    },
    "_meta": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterMeta"
        },
        "registry": {
          "type": "object",
          "properties": {
            "_type": {
              "const": "documentRegistry"
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "usedVersion": {
              "type": "string",
              "pattern": "^\\d+\\.\\d+\\.\\d+$"
            }
          },
          "required": [
            "_type",
            "url",
            "usedVersion"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "_type",
        "registry"
      ],
      "additionalProperties": false
    },
    "name": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterName"
        },
        "nickname": {
          "type": "string"
        },
        "fullName": {
          "type": "string"
        }
      },
      "required": [
        "_type",
        "fullName"
      ],
      "additionalProperties": false
    },
    "pronouns": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterPronouns"
        },
        "subject": {
          "type": "string"
        },
        "object": {
          "type": "string"
        },
        "possessive": {
          "type": "string"
        },
        "reflexive": {
          "type": "string"
        }
      },
      "required": [
        "_type",
        "subject",
        "object",
        "possessive",
        "reflexive"
      ],
      "additionalProperties": false
    },
    "heritage": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterHeritage"
        },
        "community": {
          "$ref": "#/$defs/__schema0"
        },
        "ancestry": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "_type": {
                  "const": "singleAncestry"
                },
                "ancestry": {
                  "$ref": "#/$defs/__schema0"
                },
                "notes": {
                  "type": "string"
                }
              },
              "required": [
                "_type",
                "ancestry"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "_type": {
                  "const": "dualAncestry"
                },
                "primary": {
                  "$ref": "#/$defs/__schema0"
                },
                "secondary": {
                  "$ref": "#/$defs/__schema0"
                }
              },
              "required": [
                "_type",
                "primary",
                "secondary"
              ],
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "_type",
        "community",
        "ancestry"
      ],
      "additionalProperties": false
    },
    "level": {
      "type": "integer",
      "minimum": 1,
      "maximum": 9007199254740991
    },
    "experiences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_type": {
            "const": "characterExperience"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "_type",
          "name"
        ],
        "additionalProperties": false
      }
    },
    "classes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_type": {
            "const": "characterRole"
          },
          "class": {
            "$ref": "#/$defs/__schema0"
          },
          "subclass": {
            "$ref": "#/$defs/__schema0"
          }
        },
        "required": [
          "_type",
          "class",
          "subclass"
        ],
        "additionalProperties": false
      }
    },
    "evasion": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9007199254740991
    },
    "armor": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterArmor"
        },
        "total": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9007199254740991
        },
        "spent": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        }
      },
      "required": [
        "_type",
        "total",
        "spent"
      ],
      "additionalProperties": false
    },
    "traits": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterTraits"
        },
        "agility": {
          "$ref": "#/$defs/__schema1"
        },
        "strength": {
          "$ref": "#/$defs/__schema1"
        },
        "finesse": {
          "$ref": "#/$defs/__schema1"
        },
        "instinct": {
          "$ref": "#/$defs/__schema1"
        },
        "presence": {
          "$ref": "#/$defs/__schema1"
        },
        "knowledge": {
          "$ref": "#/$defs/__schema1"
        }
      },
      "required": [
        "_type",
        "agility",
        "strength",
        "finesse",
        "instinct",
        "presence",
        "knowledge"
      ],
      "additionalProperties": false
    },
    "health": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterHealth"
        },
        "max": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        },
        "current": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        },
        "damageThreshold": {
          "type": "object",
          "properties": {
            "_type": {
              "const": "damageThreshold"
            },
            "minor": {
              "type": "integer",
              "minimum": 0,
              "maximum": 9007199254740991
            },
            "major": {
              "type": "integer",
              "minimum": 0,
              "maximum": 9007199254740991
            },
            "severe": {
              "type": "integer",
              "minimum": 0,
              "maximum": 9007199254740991
            }
          },
          "required": [
            "_type",
            "minor",
            "major",
            "severe"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "_type",
        "max",
        "current",
        "damageThreshold"
      ],
      "additionalProperties": false
    },
    "hope": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterHope"
        },
        "max": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        },
        "current": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        }
      },
      "required": [
        "_type",
        "max",
        "current"
      ],
      "additionalProperties": false
    },
    "stress": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterStress"
        },
        "max": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        },
        "current": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        }
      },
      "required": [
        "_type",
        "max",
        "current"
      ],
      "additionalProperties": false
    },
    "gold": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterGold"
        },
        "handfuls": {
          "default": 0,
          "type": "integer",
          "minimum": -9007199254740991,
          "maximum": 9007199254740991
        },
        "bags": {
          "default": 0,
          "type": "integer",
          "minimum": -9007199254740991,
          "maximum": 9007199254740991
        },
        "chests": {
          "default": 0,
          "type": "integer",
          "minimum": -9007199254740991,
          "maximum": 9007199254740991
        }
      },
      "required": [
        "_type",
        "handfuls",
        "bags",
        "chests"
      ],
      "additionalProperties": false
    },
    "inventory": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "notes": {
                "$ref": "#/$defs/__schema2"
              },
              "_type": {
                "const": "characterInventoryItemWeapon"
              },
              "item": {
                "$ref": "#/$defs/__schema0"
              },
              "equipped": {
                "default": false,
                "type": "boolean"
              }
            },
            "required": [
              "_type",
              "item",
              "equipped"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "notes": {
                "$ref": "#/$defs/__schema2"
              },
              "_type": {
                "const": "characterInventoryItemArmor"
              },
              "item": {
                "$ref": "#/$defs/__schema0"
              },
              "equipped": {
                "default": false,
                "anyOf": [
                  {
                    "const": "Primary"
                  },
                  {
                    "const": "Secondary"
                  },
                  {
                    "const": false
                  }
                ]
              }
            },
            "required": [
              "_type",
              "item",
              "equipped"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "notes": {
                "$ref": "#/$defs/__schema2"
              },
              "_type": {
                "const": "characterInventoryItemSpecial"
              },
              "item": {
                "$ref": "#/$defs/__schema0"
              }
            },
            "required": [
              "_type",
              "item"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "notes": {
                "$ref": "#/$defs/__schema2"
              },
              "_type": {
                "const": "characterInventoryItemGeneral"
              },
              "name": {
                "type": "string"
              }
            },
            "required": [
              "_type",
              "name"
            ],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": [
    "_type",
    "_meta",
    "name",
    "pronouns",
    "heritage",
    "level",
    "experiences",
    "classes",
    "evasion",
    "armor",
    "traits",
    "health",
    "hope",
    "stress",
    "gold",
    "inventory"
  ],
  "additionalProperties": false,
  "$defs": {
    "__schema0": {
      "type": "string",
      "pattern": "^[A-Za-z]+\\/[A-Za-z]+:[A-Za-z]+$"
    },
    "__schema1": {
      "type": "object",
      "properties": {
        "_type": {
          "const": "characterTrait"
        },
        "value": {
          "default": 0,
          "type": "integer",
          "minimum": -9007199254740991,
          "maximum": 9007199254740991
        },
        "locked": {
          "default": false,
          "type": "boolean"
        }
      },
      "required": [
        "_type",
        "value",
        "locked"
      ],
      "additionalProperties": false
    },
    "__schema2": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}