{
	"name": "@forge/schema",
	"description": "DHFS Models for defining and validating data",
	"version": "0.0.0",
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"sideEffects": false,
	"license": "MIT",
	"files": [
		"src/**"
	],
	"exports": {
		".": "./src/index.ts",
		"./schema": "./src/schema.ts",
		"./types": "./src/types.ts",
		"./models/*": "./src/models/*"
	},
	"scripts": {
		"generate-schema": "tsx ./src/scripts/generate-schema.ts",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
		"check": "tsc --noEmit"
	},
	"devDependencies": {
		"@forge/helpers": "workspace:*",
		"@forge/tsconfig": "workspace:*",
		"tsx": "^4.19.4",
		"typescript": "5.8.3"
	},
	"dependencies": {
		"@types/node": "^20.17.52",
		"zod": "^3.25.32"
	},
	"publishConfig": {
		"access": "public"
	}
}
